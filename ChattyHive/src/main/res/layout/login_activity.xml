<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chattyhive.chattyhive.LoginActivity$PlaceholderFragment"
    android:id="@+id/login_activity_master_frame">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="144dp"
        android:id="@+id/imageView"
        android:layout_weight="1"
        android:src="@drawable/logo_con_isotipo_para_fondo_negro"
        android:layout_gravity="center" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_activity_sign_up"
                    android:id="@+id/login_activity_signup_tab_button"
                    android:background="@drawable/login_activity_tab_button_background_selector"
                    android:layout_marginRight="-1dp"
                    android:textColor="#eeeeee"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_activity_login"
                    android:id="@+id/login_activity_login_tab_button"
                    android:background="@drawable/login_activity_tab_button_background_selector"
                    android:layout_marginLeft="-1dp"
                    android:textColor="#eeeeee"
                    android:paddingBottom="18dp"
                    android:paddingRight="26dp"
                    android:paddingTop="18dp"
                    android:paddingLeft="26dp"
                    android:typeface="normal"
                    android:layout_weight="1" />
            </LinearLayout>

            <ViewSwitcher
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:id="@+id/viewSwitcher" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
