<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.chattyhive.chattyhive.LoginActivity$PlaceholderFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/login_activity_master_frame"
    android:baselineAligned="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_logo_height"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:src="@drawable/logo_con_isotipo_para_fondo_negro"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/login_logo_margin_top"
        android:layout_marginBottom="@dimen/login_logo_margin_bottom"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_activity_sign_up"
                    android:id="@+id/login_activity_signup_tab_button"
                    android:background="@drawable/login_activity_tab_button_background_selector"
                    android:layout_marginRight="-1dp"
                    android:textColor="#eeeeee"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_activity_login"
                    android:id="@+id/login_activity_login_tab_button"
                    android:background="@drawable/login_activity_tab_button_background_selector"
                    android:layout_marginLeft="-1dp"
                    android:textColor="#eeeeee"
                    android:paddingBottom="18dp"
                    android:paddingRight="26dp"
                    android:paddingTop="18dp"
                    android:paddingLeft="26dp"
                    android:typeface="normal"
                    android:layout_weight="1" />
            </LinearLayout>

            <ViewSwitcher
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewSwitcher" />

        </LinearLayout>

</LinearLayout>
</ScrollView>