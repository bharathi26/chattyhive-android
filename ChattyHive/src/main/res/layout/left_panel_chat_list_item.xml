<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/left_panel_chat_list_item_background"
    android:focusableInTouchMode="false"
    android:id="@+id/left_panel_chat_list_item_top_view"
    android:layout_marginBottom="@dimen/left_panel_list_item_margin_bottom">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#00000000">

        <ImageView
            android:layout_width="@dimen/left_panel_chat_list_item_big_img_width"
            android:layout_height="@dimen/left_panel_chat_list_item_big_img_height"
            android:id="@+id/left_panel_chat_list_item_big_img"
            android:src="@drawable/chats_users_online"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_marginLeft="@dimen/left_panel_chat_list_item_big_img_margin_left"
            android:layout_marginTop="@dimen/left_panel_chat_list_item_big_img_margin_top"
            android:layout_marginRight="@dimen/left_panel_chat_list_item_big_img_margin_right"
            android:layout_marginBottom="@dimen/left_panel_chat_list_item_big_img_margin_bottom"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_width="@dimen/left_panel_chat_list_item_little_img_width"
            android:layout_height="@dimen/left_panel_chat_list_item_little_img_height"
            android:id="@+id/left_panel_chat_list_item_little_img"
            android:src="@drawable/pestanha_chats_public_chat"
            android:background="@drawable/left_panel_chat_list_item_little_img_border"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/left_panel_chat_list_item_little_img_margin_left"
            android:layout_marginTop="@dimen/left_panel_chat_list_item_little_img_margin_top" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_panel_chat_list_item_chat_name"
            android:textColor="@color/left_panel_chat_list_item_chat_name_text"
            android:background="#00000000"
            android:layout_gravity="left|top"
            android:text="Chat name"
            android:minLines="1"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/left_panel_chat_list_item_chat_name_margin_top"
            android:layout_marginBottom="@dimen/left_panel_chat_list_item_chat_name_margin_bottom"
            android:textSize="@dimen/left_panel_chat_list_item_chat_name_text_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_panel_chat_list_item_last_message"
            android:textColor="@color/left_panel_chat_list_item_last_message_text"
            android:background="#00000000"
            android:layout_gravity="bottom|left"
            android:text="Last message"
            android:minLines="1"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/left_panel_chat_list_item_last_message_margin_bottom"
            android:layout_marginRight="@dimen/left_panel_chat_list_item_last_message_margin_right"
            android:textSize="@dimen/left_panel_chat_list_item_last_message_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOW"
            android:id="@+id/left_panel_chat_list_item_timestamp"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:textColor="@color/left_panel_chat_list_item_timestamp_text"
            android:layout_marginRight="@dimen/left_panel_chat_list_item_timestamp_margin_right"
            android:layout_marginTop="@dimen/left_panel_chat_list_item_timestamp_margin_top"
            android:textSize="@dimen/left_panel_chat_list_item_timestamp_text_size"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/left_panel_chat_list_item_number_messages"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/left_panel_chat_list_item_number_messages_border"
            android:textColor="@color/left_panel_chat_list_item_number_messages_text"
            android:layout_marginRight="@dimen/left_panel_chat_list_item_timestamp_margin_right"
            android:layout_marginBottom="@dimen/left_panel_chat_list_item_number_messages_margin_bottom"
            android:textSize="@dimen/left_panel_chat_list_item_number_messages_text_size"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/left_panel_chat_list_item_item_type_img"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/pestanha_chats_arroba"
            android:background="#00000000"
            android:adjustViewBounds="true" />
    </FrameLayout>

</LinearLayout>