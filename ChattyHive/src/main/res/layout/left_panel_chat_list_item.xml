<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/left_panel_list_item_background"
    android:focusableInTouchMode="false"
    android:id="@+id/left_panel_chat_list_item_top_view">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/left_panel_chat_list_item_big_img"
            android:src="@drawable/chats_users_online"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:layout_weight="0"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/pestanha_chats_public_chat"
            android:background="@color/left_panel_list_item_background"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:tint="#ffffd92f"
            android:visibility="visible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingLeft="4dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/left_panel_chat_list_item_chat_name"
            android:textColor="@color/left_panel_list_item_chat_name_text"
            android:background="#00000000"
            android:layout_gravity="left|top"
            android:text="Chat name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/left_panel_chat_list_item_last_message"
            android:textColor="@color/left_panel_list_item_last_message_text"
            android:background="#00000000"
            android:layout_gravity="bottom|left"
            android:text="Last message"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOW"
            android:id="@+id/textView"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:textColor="@color/left_panel_list_item_last_message_time_text"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99+"
            android:id="@+id/textView2"
            android:layout_gravity="center_vertical|right"
            android:background="#ffffd735"
            android:textColor="#ffff0e10"
            android:paddingLeft="3dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView2"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/pestanha_chats_arroba" />
    </FrameLayout>

</LinearLayout>