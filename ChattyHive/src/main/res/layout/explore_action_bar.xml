<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/explore_action_bar_background"
    android:textAlignment="center">

    <FrameLayout android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/explora_border"
        android:paddingTop="6dp">
        <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/explore_action_bar_goBack_button"
        android:src="@drawable/explore_new_hive_back"
        android:scaleType="centerInside"
        android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/explore_action_bar_number_text"
            android:textColor="#111111"
            android:layout_gravity="top|right"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text=""
            android:gravity="left"
            android:paddingRight="1dp"
            android:paddingLeft="0dp"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:src="@drawable/home_add_hive"
                android:layout_toRightOf="@+id/explore_action_bar_number_text"
                android:layout_marginTop="2dp"
                android:visibility="invisible"/>
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="explore"
        android:id="@+id/explore_action_bar_screen_title"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="0dp"
        android:textColor="@color/explore_action_bar_title"
        android:textSize="35dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">
        <ImageView
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_new_hive_blanco"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"/>
    </LinearLayout>
</LinearLayout>