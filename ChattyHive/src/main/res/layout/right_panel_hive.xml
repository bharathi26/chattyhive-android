<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_panel_hive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    android:baselineAligned="false"
    android:weightSum="1"
    android:divider="@null">

    <LinearLayout
        android:id="@+id/menu_punto_expandible3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/menu_menu_flecha3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/hive_description_padding_left"
            android:paddingRight="@dimen/hive_description_padding_right"
            android:paddingTop="@dimen/hive_description_padding_top"
            android:paddingBottom="@dimen/hive_description_padding_bottom">

            <ImageView
                android:id="@+id/menu_flecha_imagen3"
                android:layout_width="@dimen/hive_description_image"
                android:layout_height="@dimen/hive_description_image"
                android:src="@drawable/ic_action_next_item"
                android:tint="@color/menu_text_white"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/right_panel_hive_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/menu_hive_name"
            android:textSize="@dimen/hive_description_text_size"
            android:gravity="left"
            android:paddingTop="@dimen/hive_description_text_padding_top"
            android:textColor="@color/menu_text_white"/>
    </LinearLayout>
</LinearLayout>


