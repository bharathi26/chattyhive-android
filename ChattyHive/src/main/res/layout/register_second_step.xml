<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/register_general_padding_top"
    android:paddingBottom="@dimen/register_general_padding_bottom"
    android:background="@drawable/register_general_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/register_general_main_block_with"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/register_main_block_background"
            android:paddingLeft="@dimen/register_general_main_block_padding_left"
            android:paddingTop="@dimen/register_general_main_block_padding_top"
            android:paddingRight="@dimen/register_general_main_block_padding_right"
            android:paddingBottom="@dimen/register_general_main_block_padding_bottom"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_second_step_username_label"
                android:id="@+id/textView"
                android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/registro_arroba" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:hint="@string/register_second_step_username_hint" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_second_step_avatar_label"
                android:id="@+id/textView2"
                android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/registro_load_picture" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_second_step_avatar_random"
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_second_step_avatar_gallery"
                        android:id="@+id/textView4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_second_step_avatar_choose_from_local"
                        android:id="@+id/textView5" />
                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:id="@+id/checkBox"
                            android:checked="false"
                            android:background="@drawable/register_checkbox_button"
                            android:enabled="false"
                            android:button="#00000000" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/register_second_step_show_age"
                            android:id="@+id/textView7"
                            android:singleLine="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <CheckBox
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:id="@+id/checkBox2"
                            android:checked="true"
                            android:background="@drawable/register_checkbox_button"
                            android:enabled="false"
                            android:button="#00000000" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/register_second_step_show_gender"
                            android:id="@+id/textView8"
                            android:labelFor="@id/checkBox2"/>
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:id="@+id/checkBox3"
                            android:button="#00000000"
                            android:background="@drawable/register_checkbox_button" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/register_second_step_show_location"
                            android:id="@+id/textView9" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_second_step_public_note"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="bottom" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_general_buttons_margin_top">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_second_step_buttons_back"
                android:id="@+id/button"
                android:background="@drawable/register_buttons_back_background"
                android:maxWidth="@dimen/register_general_buttons_max_with"
                android:layout_gravity="left"
                android:width="@dimen/register_general_buttons_max_with"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/register_general_buttons_back_text"
                android:paddingLeft="@dimen/register_general_buttons_padding_left"
                android:paddingTop="@dimen/register_general_buttons_padding_top"
                android:paddingRight="@dimen/register_general_buttons_padding_right"
                android:paddingBottom="@dimen/register_general_buttons_padding_bottom"
                android:textSize="@dimen/register_general_buttons_text_size" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_second_step_buttons_next"
                android:id="@+id/button2"
                android:background="@drawable/register_buttons_next_background"
                android:maxWidth="@dimen/register_general_buttons_max_with"
                android:width="@dimen/register_general_buttons_max_with"
                android:layout_gravity="right"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/register_general_buttons_next_text"
                android:paddingLeft="@dimen/register_general_buttons_padding_left"
                android:paddingTop="@dimen/register_general_buttons_padding_top"
                android:paddingRight="@dimen/register_general_buttons_padding_right"
                android:paddingBottom="@dimen/register_general_buttons_padding_bottom"
                android:textSize="@dimen/register_general_buttons_text_size" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>