<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_panel_items_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:baselineAligned="false"
    android:weightSum="1"
    android:background="@drawable/borde2px">

    <LinearLayout
        android:id="@+id/menu_punto_expandible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:gravity="left"
        android:orientation="horizontal">
        <!--   el margen variará  COMO???? hace falta?  -->
    <RelativeLayout
        android:id="@+id/menu_menu_flecha"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:paddingTop="14dp"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/menu_flecha_imagen"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_action_next_item"
            android:tint="@color/menu_text_white"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Menú"
        android:textSize="16dp"
        android:gravity="left"
        android:paddingTop="12dp"
        android:paddingBottom="2dp"
        android:textColor="@color/menu_text_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="16dp"
            android:paddingTop="11dp">
        <ImageView
            android:id="@+id/menu_notexpanded_explora_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/explore_naranja"
            android:visibility="visible"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="11dp"
            android:paddingTop="11dp">
        <ImageView
            android:id="@+id/menu_notexpanded_home_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home"/>
        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
