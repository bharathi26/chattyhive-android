<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_panel_subitems_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12.5dp"
    android:paddingRight="12.5dp">

    <LinearLayout
        android:id="@+id/options_invite"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="17dp"
            android:paddingTop="8dp"
            android:paddingBottom="7.5dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/contextos_invitar_a_hive_blanco"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Invitar amigos/hivemates"
            android:textSize="24dp"
            android:textStyle="normal"
            android:textColor="@color/menu_text_white"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_empty"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="17dp"
                android:paddingTop="8dp"
                android:paddingBottom="7.5dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/contextos_vaciar_chat"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Eliminar chat"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:textColor="@color/menu_text_white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_leave_delete"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="17dp"
                android:paddingTop="8dp"
                android:paddingBottom="7.5dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/contextos_leave_hive_blanco"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Abandonar y eliminar hive"
                android:textSize="24dp"
                android:textStyle="normal"
                android:textColor="@color/menu_text_white"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_report"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="17dp"
                android:paddingTop="8dp"
                android:paddingBottom="7.5dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/contextos_reportar_usuario_blanco"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Denunciar hive"
                android:textSize="24dp"
                android:textStyle="normal"
                android:textColor="@color/menu_text_white"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>