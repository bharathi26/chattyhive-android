<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical|center_horizontal"
        android:background="#111111">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/chatIcon"
            android:background="#111111"
            android:src="@drawable/registro_load_picture"
            android:scaleType="fitCenter"
            android:padding="5dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#111111"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/chatName"
                android:textColor="#fff9ff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/chatInfo"
                android:textColor="#ebeff4"
                android:textSize="14dp"
                android:layout_marginTop="-2dp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#111111"
            android:src="@drawable/chats_opciones_chat"
            android:scaleType="centerInside"
            android:id="@+id/chatMenuIcon"
            android:padding="5dp" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/listView"
        android:layout_weight="1"
        android:background="#ededed" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/imageButton"
            android:layout_weight="0"
            android:paddingLeft="13dp"
            android:paddingRight="6dp"
            android:paddingTop="11dp"
            android:paddingBottom="8dp"
            android:src="@drawable/home_group"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal|bottom" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/imageButton2"
            android:paddingTop="11dp"
            android:paddingLeft="6dp"
            android:paddingRight="13dp"
            android:paddingBottom="8dp"
            android:background="#ffffff"
            android:src="@drawable/chats_reply"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal|bottom" />

    </LinearLayout>
</LinearLayout>