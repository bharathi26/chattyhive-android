<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/main_panel_chat_message_list"
        android:layout_weight="1"
        android:background="#ededed"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:fastScrollEnabled="true"
        android:transcriptMode="normal"
        android:choiceMode="none"
        android:divider="@null"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border_text_bar">
        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/main_panel_chat_smyles_icon"
            android:layout_weight="0"
            android:paddingLeft="13dp"
            android:paddingRight="6dp"
            android:paddingTop="11dp"
            android:paddingBottom="8dp"
            android:src="@drawable/launcher_launcher_a"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal|bottom" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/main_panel_chat_textBox"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@null"/>

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/main_panel_chat_sticker_icon"
            android:paddingTop="11dp"
            android:paddingLeft="6dp"
            android:paddingRight="13dp"
            android:paddingBottom="8dp"
            android:background="#ffffff"
            android:src="@drawable/chats_emoticons"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha="0.5"/>
        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/main_panel_chat_send_icon"
            android:paddingTop="11dp"
            android:paddingLeft="6dp"
            android:paddingRight="13dp"
            android:paddingBottom="8dp"
            android:background="#ffffff"
            android:src="@drawable/chats_send"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha="0.5"/>
    </LinearLayout>
</LinearLayout>