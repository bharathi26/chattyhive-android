<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_profile_general_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/my_profile_edit_button"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/my_profile_edit_button_margin_top"
        android:layout_marginRight="@dimen/my_profile_edit_button_margin_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_profile_edit_button"
            android:id="@+id/textView"
            android:textColor="@color/my_profile_edit_button_text"
            android:paddingLeft="@dimen/my_profile_edit_button_text_padding_left"
            android:paddingTop="@dimen/my_profile_edit_button_text_padding_top"
            android:paddingRight="@dimen/my_profile_edit_button_text_padding_right"
            android:paddingBottom="@dimen/my_profile_edit_button_text_padding_bottom"
            android:layout_gravity="center_vertical|left"
            android:textSize="@dimen/my_profile_edit_button_text_size"
            android:singleLine="false"
            android:phoneNumber="false"
            android:password="false"
            android:fontFamily="Roboto"
            android:autoText="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/my_profile_edit_button_image"
            android:src="@drawable/edit"
            android:paddingLeft="@dimen/my_profile_edit_button_image_padding_left"
            android:paddingTop="@dimen/my_profile_edit_button_image_padding_top"
            android:paddingRight="@dimen/my_profile_edit_button_image_padding_right"
            android:paddingBottom="@dimen/my_profile_edit_button_image_padding_bottom"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:baselineAlignBottom="false"
            android:layout_gravity="center_vertical|right"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/my_profile_photo_top_margin">

                <ImageView
                    android:layout_width="@dimen/my_profile_photo_private_size"
                    android:layout_height="@dimen/my_profile_photo_private_size"
                    android:id="@+id/imageView"
                    android:layout_marginRight="@dimen/my_profile_photo_separation"
                    android:layout_gravity="center_horizontal|bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/my_profile_private_profile_simple"
                    android:alpha="0.6" />

                <ImageView
                    android:layout_width="@dimen/my_profile_photo_public_size"
                    android:layout_height="@dimen/my_profile_photo_public_size"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center_horizontal|bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/my_profile_public_profile_simple"
                    android:alpha="0.6" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile_default_full_name"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/my_profile_full_name_margin_top"
                android:textSize="@dimen/my_profile_full_name_text_size"
                android:textColor="@color/my_profile_full_name_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile_default_nickname"
                android:id="@+id/textView3"
                android:textColor="@color/my_profile_nickname_default_text"
                android:textSize="@dimen/my_profile_nickname_text_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/my_profile_nickname_margin_top"
                android:layout_marginBottom="@dimen/my_profile_nickname_margin_bottom" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_profile_status">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_profile_status"
                        android:id="@+id/textView5"
                        android:paddingLeft="@dimen/my_profile_status_title_text_padding_left"
                        android:paddingTop="@dimen/my_profile_status_title_text_padding_top"
                        android:paddingRight="@dimen/my_profile_status_title_text_padding_right"
                        android:paddingBottom="@dimen/my_profile_status_title_text_padding_bottom"
                        android:textColor="@color/my_profile_status_text"
                        android:textSize="@dimen/my_profile_status_title_text_size"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView3" />

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_profile_status_for_friends"
                        android:id="@+id/textView6"
                        android:textColor="@color/my_profile_status_active_text"
                        android:textSize="@dimen/my_profile_status_for_friends_text_size"
                        android:gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_profile_status_horizontal_divider_thick"
                    android:background="@color/my_profile_status_message_line"
                    android:layout_marginLeft="@dimen/my_profile_status_horizontal_divider_margin_left"
                    android:layout_marginRight="@dimen/my_profile_status_horizontal_divider_margin_right"
                    android:visibility="visible" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_profile_default_private_status_message"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/my_profile_status_message_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>