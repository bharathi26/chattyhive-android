<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ebebeb">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ebebeb">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout9"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="eMail:"
                    android:id="@+id/textView2"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_email"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="First name:"
                    android:id="@+id/textView"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_first_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Last name:"
                    android:id="@+id/textView3"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:singleLine="false"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_last_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout2"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Public name:"
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_public_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout3"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sex:"
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_sex"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout4"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Language:"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_language"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout5"
                android:layout_margin="10dp"
                android:layout_marginBottom="35dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Location:"
                    android:id="@+id/textView11"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:id="@+id/profile_location"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:textColor="#111111"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout6"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Show location:"
                    android:id="@+id/textView13"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_show_location"
                    android:checked="false"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout7"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Private -> Show Age:"
                    android:id="@+id/textView14"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_private_show_age"
                    android:checked="false"
                    android:background="#ebebeb" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout8"
                android:layout_margin="10dp"
                android:background="#ebebeb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Public -> Show Age:"
                    android:id="@+id/textView15"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:background="#ebebeb" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_public_show_age"
                    android:checked="false"
                    android:background="#ebebeb" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    </LinearLayout>