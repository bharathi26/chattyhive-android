<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_panel_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background_color"
    android:orientation="vertical">

    <!--menu desplegable-->
    <ExpandableListView
        android:id="@+id/right_panel_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:groupIndicator="@null"
        android:cacheColorHint="@color/menu_background_color">
    </ExpandableListView>

    <!--dejar para comprobar que sube lo de abajo-->
    <LinearLayout
        android:id="@+id/right_panel_layout_list"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/right_panel_layout_list_notificaciones"
            android:text="@string/right_panel_layout_list_notificaciones">
        </TextView>
        <RelativeLayout
            android:id="@+id/right_panel_layout_list_notificaciones_bell"
            android:layout_width="32dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/right_panel_layout_list_notificaciones_bell_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
        </RelativeLayout>
    </LinearLayout>
    <!--AquÃ­ iran dos expandable list view mas (en ppio)-->

    <!--LOGO CHATTYHIVE-->

</LinearLayout>
