<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="right"
    android:layout_gravity="right">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="explore"
        android:id="@+id/temp_explore_button"
        style="@android:style/Widget.Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/temp_profile_button"
        android:layout_gravity="right"
        style="@android:style/Widget.Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Sync"
        android:id="@+id/temp_chat_sync_button"
        android:singleLine="false" />

    <Button
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/temp_logout_button"
        android:layout_gravity="right" />

    <Button
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear chats"
        android:id="@+id/temp_clear_chats_button"
        android:layout_gravity="right" />
</LinearLayout>