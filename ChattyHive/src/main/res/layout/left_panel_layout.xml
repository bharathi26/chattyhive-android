<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/chat_list_width"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#292929">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_panel_chats_button"
            android:id="@+id/left_panel_chats_button"
            android:textColor="#a1a1a1"
            android:background="#00000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_panel_hives_button"
            android:id="@+id/left_panel_hives_button"
            android:textColor="#a1a1a1"
            android:background="#00000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_panel_mates_button"
            android:id="@+id/left_panel_mates_button"
            android:textColor="#a1a1a1"
            android:background="#00000000" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/left_panel_search_button"
            android:src="@drawable/pestanhas_panel_izquierdo_search_blanco"
            android:background="#00000000"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/left_panel_search_button"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:background="#FFF9EA">

    </LinearLayout>

    <ViewSwitcher
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/left_panel_empty_list_view_switcher"
        android:layout_gravity="center"
        android:animateFirstView="false">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/left_panel_element_list" />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:foregroundGravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/left_panel_empty_list"
                android:id="@+id/left_panel_empty_list_message"
                android:layout_gravity="center" />
        </FrameLayout>
    </ViewSwitcher>

</LinearLayout>