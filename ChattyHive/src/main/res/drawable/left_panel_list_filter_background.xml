<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/left_panel_list_filter_border_right" />
        </shape>
    </item>
    <item android:right="2px">
        <shape android:shape="rectangle">
            <solid android:color="@color/left_panel_list_filter_border_bottom"/>
        </shape>
    </item>
    <item android:bottom="4px" android:right="2px">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/left_panel_list_filter_background_top"
                android:centerColor="@color/left_panel_list_filter_background_center"
                android:endColor="@color/left_panel_list_filter_background_bottom"
                android:angle="270" />
        </shape>
    </item>
</layer-list>