<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/left_panel_list_filter_border_right" />
        </shape>
    </item>
    <item android:right="@dimen/left_panel_list_filter_border_right_thick">
        <shape android:shape="rectangle">
            <solid android:color="@color/left_panel_list_filter_border_bottom"/>
        </shape>
    </item>
    <item android:bottom="@dimen/left_panel_list_filter_border_bottom_thick" android:right="@dimen/left_panel_list_filter_border_right_thick">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/left_panel_list_filter_background_start"
                android:centerColor="@color/left_panel_list_filter_background_center"
                android:endColor="@color/left_panel_list_filter_background_end"
                android:angle="@integer/left_panel_list_filter_background_angle" />
        </shape>
    </item>
</layer-list>