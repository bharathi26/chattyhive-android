<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_list_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_bar_height"
        android:baselineAligned="false"
        android:background="@drawable/home_top_bar_background">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:id="@+id/home_chat_button">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000">

                <ImageView
                    android:layout_width="@dimen/home_top_bar_icon_size"
                    android:layout_height="@dimen/home_top_bar_icon_size"
                    android:id="@+id/home_chat_button_image"
                    android:adjustViewBounds="true"
                    android:src="@drawable/home_chatear"
                    android:scaleType="centerInside"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_top_bar_chat"
                    android:textSize="@dimen/home_top_bar_text_size"
                    android:textColor="@color/home_top_bar_text"
                    android:background="#00000000"
                    android:layout_marginLeft="@dimen/home_top_bar_image_text_spacing" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/home_top_bar_vertical_divider_thick"
            android:layout_height="@dimen/home_top_bar_vertical_divider_height"
            android:layout_gravity="center"
            android:background="@color/home_top_bar_vertical_divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:layout_gravity="center"
            android:id="@+id/home_explore_button">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000">

                <ImageView
                    android:layout_width="@dimen/home_top_bar_icon_size"
                    android:layout_height="@dimen/home_top_bar_icon_size"
                    android:id="@+id/home_explore_button_image"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_explore_gordov2"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_top_bar_explore"
                    android:textSize="@dimen/home_top_bar_text_size"
                    android:textColor="@color/home_top_bar_text"
                    android:background="#00000000"
                    android:layout_marginLeft="@dimen/home_top_bar_image_text_spacing" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="@dimen/home_top_bar_vertical_divider_thick"
            android:layout_height="@dimen/home_top_bar_vertical_divider_height"
            android:layout_gravity="center"
            android:background="@color/home_top_bar_vertical_divider"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:layout_gravity="center"
            android:id="@+id/home_hive_button">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000">

                <ImageView
                    android:layout_width="@dimen/home_top_bar_icon_size"
                    android:layout_height="@dimen/home_top_bar_icon_size"
                    android:id="@+id/home_hive_button_image"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_new_hive_home"
                    android:background="#00000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_top_bar_hive"
                    android:textSize="@dimen/home_top_bar_text_size"
                    android:textColor="@color/home_top_bar_text"
                    android:background="#00000000"
                    android:layout_marginLeft="@dimen/home_top_bar_image_text_spacing" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_listView"
        android:background="@color/home_list_background"
        android:divider="@null"
        android:cacheColorHint="#00000000"/>
</LinearLayout>