<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/explore_list_header_card"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:id="@+id/explore_list_header_back_button"
        android:layout_marginLeft="7.5dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_previous_item"
        android:background="@drawable/explore_list_header_back_button"
        android:tint="#000" />

    <TextView
        android:id="@+id/explore_list_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18.5dp"
        android:layout_marginLeft="11dp"
        android:textSize="17.5dp"
        android:textColor="#333333"
        android:ellipsize="marquee"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true" />
</LinearLayout>












