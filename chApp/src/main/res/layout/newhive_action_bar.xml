<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/black">

        <LinearLayout
            android:id="@+id/new_hive_back_button"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/explora_border"
            android:gravity="center"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/new_hive_action_bar_goBack_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/explore_new_hive_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="nuevo hive"
            android:textColor="@android:color/white"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/new_hive_make_button"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/new_hive_acept"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/new_hive_action_bar_check_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/accept_new_hive" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>