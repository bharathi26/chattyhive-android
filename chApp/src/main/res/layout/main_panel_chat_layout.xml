<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/main_panel_chat_message_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ededed"
        android:cacheColorHint="#00000000"
        android:choiceMode="none"
        android:divider="@null"
        android:fastScrollEnabled="true"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border_text_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:gravity="center">
        <ImageView
            android:id="@+id/main_panel_chat_smyles_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/chats_isotipo_puro_recto_01" />
        </LinearLayout>
        <EditText
            android:id="@+id/main_panel_chat_textBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center|left"
            android:hint="Write a message.."
            android:inputType="textMultiLine"
            android:paddingLeft="5dp"
            android:textColor="#111111"
            android:textColorHint="#808080"
            android:textCursorDrawable="@null"
            android:textSize="14.5dp" />

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/main_panel_chat_sticker_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:src="@drawable/chats_emoticons" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_panel_chat_send_icon"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:gravity="center">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:src="@drawable/chats_send" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>