<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:layout_gravity="left">
<LinearLayout
    android:id="@+id/main_panel_chat_item"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_globe_other"
    android:gravity="left"
    android:layout_gravity="left"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="27dp"
    android:layout_marginBottom="3dp"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:paddingLeft="35dp"
    android:paddingRight="14dp"
    android:weightSum="0"
    android:layout_weight="0">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_panel_chat_single_message_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:paddingTop="4dp"
        android:paddingBottom="7dp"
        android:cropToPadding="false"
        android:src="@drawable/default_loading_chat_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='hi,bla bla bla bla bla bla bla bla bla bla bla bla bla bls bla bla bla bla'
        android:id="@+id/main_panel_chat_single_message_messageText"
        android:layout_alignRight="@+id/main_panel_chat_single_message_timeStamp_container"
        android:layout_alignParentTop="true"
        android:textColor="#333333"
        android:paddingTop="4dp"
        android:paddingBottom="7dp"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:layout_gravity="right"
        android:id="@+id/main_panel_chat_single_message_timeStamp_container"
        android:gravity="bottom|right">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A while ago."
        android:id="@+id/main_panel_chat_single_message_timeStamp"
        android:minLines="1"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#808080"
        android:ellipsize="none"
        android:textSize="12sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/main_panel_chat_single_message_confirm_icon"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:visibility="gone"
            android:src="@drawable/abc_ic_cab_done_holo_light" />
    </LinearLayout>
    <!--android:layout_marginLeft="10dp"-->
</LinearLayout>
</LinearLayout>