<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/explore_action_bar_background"
    android:orientation="horizontal"
    android:textAlignment="center">

    <FrameLayout
        android:id="@+id/explore_action_bar_goBack_button"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/explora_border"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/explore_action_bar_goBack_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/explore_new_hive_back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:layout_gravity="top"
            android:paddingLeft="4dp"
            android:paddingRight="0dp">

                <TextView
                    android:id="@+id/explore_action_bar_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#111111"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            <ImageView
                android:id="@+id/explore_action_bar_hive_added"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/explore_action_bar_number_text"
                android:src="@drawable/explore_new_hive_join_hive"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/explore_action_bar_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="0dp"
        android:text="explore"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/explore_action_bar_title"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <ImageView
            android:id="@+id/explore_new_hive_button"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:src="@drawable/menu_new_hive_blanco" />
    </LinearLayout>
</LinearLayout>