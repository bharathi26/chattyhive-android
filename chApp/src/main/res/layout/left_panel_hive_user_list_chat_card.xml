<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/card_orange"
    android:layout_marginTop="8.5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:paddingTop="10.5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public chat"
                    android:textColor="#F85E01"
                    android:textSize="18.5dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.75"
                    android:src="@drawable/pestanha_hives_language_opcion3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ES"
                    android:textColor="#333"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:text="hola hola "
                android:textColor="#404040"
                android:textSize="15dp"
                android:id="@+id/left_panel_hive_user_list_chat_last_message" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="+99"
                android:textColor="#404040"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/pestanha_hives_new_buzzes" />
        </LinearLayout>
</LinearLayout>