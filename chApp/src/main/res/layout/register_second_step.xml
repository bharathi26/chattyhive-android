<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/register_general_padding_top"
    android:paddingBottom="@dimen/register_general_padding_bottom"
    android:background="@drawable/register_general_background"
    android:id="@+id/register_second_step_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:background="#00000000">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/register_general_main_block_with"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#00000000">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/register_main_block_background"
                android:paddingLeft="@dimen/register_general_main_block_padding_left"
                android:paddingTop="@dimen/register_general_main_block_padding_top"
                android:paddingRight="@dimen/register_general_main_block_padding_right"
                android:paddingBottom="@dimen/register_general_main_block_padding_bottom"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_second_step_username_label"
                    android:id="@+id/textView"
                    android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left"
                    android:layout_marginTop="@dimen/register_second_step_username_text_margin_top"
                    android:layout_marginBottom="@dimen/register_second_step_username_text_margin_bottom"
                    android:textSize="@dimen/register_second_step_username_text"
                    android:textColor="@color/register_second_step_username_label_text"
                    android:background="#00000000" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_second_step_username_field_height"
                    android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left"
                    android:layout_marginRight="@dimen/register_second_step_username_field_margin_right"
                    android:layout_marginBottom="@dimen/register_second_step_username_field_margin_bottom"
                    android:background="#00000000">

                    <ImageView
                        android:layout_width="@dimen/register_second_step_username_image_size"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/registro_arroba"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:layout_marginRight="@dimen/register_second_step_username_image_separation"
                        android:background="#00000000" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/register_second_step_username"
                        android:hint="@string/register_second_step_username_hint"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/register_second_step_username_field_padding_left"
                        android:paddingRight="@dimen/register_second_step_username_field_padding_right"
                        android:textSize="@dimen/register_second_step_username_field_text"
                        android:background="@drawable/register_second_step_username_field_background"
                        android:textColor="@color/register_second_step_username_field_text"
                        android:textColorHint="@color/register_second_step_username_field_hint" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_second_step_avatar_label"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left"
                    android:textSize="@dimen/register_second_step_avatar_section_text"
                    android:textColor="@color/register_second_step_avatar_label_text"
                    android:background="#00000000" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left"
                    android:layout_marginTop="@dimen/register_second_step_avatar_img_margin_top"
                    android:background="#00000000">

                    <ImageView
                        android:layout_width="@dimen/register_second_step_avatar_img_size"
                        android:layout_height="@dimen/register_second_step_avatar_img_size"
                        android:id="@+id/register_second_step_avatar_image"
                        android:src="@drawable/registro_load_picture"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="@dimen/register_second_step_avatar_img_margin_right"
                        android:background="@drawable/register_second_step_avatar_img_background" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/register_second_step_avatar_options_margin_top"
                            android:background="#00000000"
                            android:id="@+id/register_second_step_random_avatar_button">

                            <ImageView
                                android:layout_width="@dimen/register_second_step_avatar_options_img_size"
                                android:layout_height="@dimen/register_second_step_avatar_options_img_size"
                                android:id="@+id/imageView8"
                                android:layout_marginRight="@dimen/register_second_step_avatar_options_img_separation"
                                android:background="#00000000"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/register_random_avatar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register_second_step_avatar_random"
                                android:id="@+id/textView3"
                                android:textSize="@dimen/register_second_step_avatar_options_text"
                                android:textColor="@color/register_second_step_avatar_options_text"
                                android:background="#00000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="@dimen/register_second_step_avatar_options_vertical_separation"
                            android:background="#00000000"
                            android:id="@+id/register_second_step_avatar_gallery_button">

                            <ImageView
                                android:layout_width="@dimen/register_second_step_avatar_options_img_size"
                                android:layout_height="@dimen/register_second_step_avatar_options_img_size"
                                android:id="@+id/imageView7"
                                android:layout_marginRight="@dimen/register_second_step_avatar_options_img_separation"
                                android:background="#00000000"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/registro_galeria_imagenes" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register_second_step_avatar_gallery"
                                android:id="@+id/textView4"
                                android:textSize="@dimen/register_second_step_avatar_options_text"
                                android:textColor="@color/register_second_step_avatar_options_text"
                                android:background="#00000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="@dimen/register_second_step_avatar_options_vertical_separation"
                            android:background="#00000000"
                            android:id="@+id/register_second_step_upload_avatar_button">

                            <ImageView
                                android:layout_width="@dimen/register_second_step_avatar_options_img_size"
                                android:layout_height="@dimen/register_second_step_avatar_options_img_size"
                                android:id="@+id/imageView6"
                                android:layout_marginRight="@dimen/register_second_step_avatar_options_img_separation"
                                android:background="#00000000"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/registro_load_picture" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register_second_step_avatar_choose_from_local"
                                android:id="@+id/textView5"
                                android:textSize="@dimen/register_second_step_avatar_options_text"
                                android:textColor="@color/register_second_step_avatar_options_text"
                                android:background="#00000000" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/register_second_step_main_block_additional_padding_left"
                    android:layout_marginTop="@dimen/register_second_step_show_table_margin_top"
                    android:background="#00000000">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:id="@+id/register_second_step_show_age_public_button">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/register_second_step_checkbox_img_size"
                                android:id="@+id/register_second_step_show_age_public_checkbox_image"
                                android:src="@drawable/registro_white_tick_deactivated_grey"
                                android:scaleType="centerInside"
                                android:adjustViewBounds="true"
                                android:background="#00000000"
                                android:layout_marginRight="@dimen/register_second_step_checkbox_img_separation" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register_second_step_show_age"
                                android:id="@+id/textView7"
                                android:singleLine="false"
                                android:textSize="@dimen/register_second_step_checkbox_text"
                                android:layout_gravity="center_vertical"
                                android:background="#00000000"
                                android:textColor="@color/register_second_step_checkbox_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="#00000000"
                            android:id="@+id/register_second_step_show_gender_public_button">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/register_second_step_checkbox_img_size"
                                android:id="@+id/register_second_step_show_gender_public_checkbox_image"
                                android:src="@drawable/registro_white_tick_deactivated_grey"
                                android:scaleType="centerInside"
                                android:adjustViewBounds="true"
                                android:background="#00000000"
                                android:layout_marginRight="@dimen/register_second_step_checkbox_img_separation" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register_second_step_show_gender"
                                android:id="@+id/textView8"
                                android:textSize="@dimen/register_second_step_checkbox_text"
                                android:layout_gravity="center_vertical"
                                android:background="#00000000"
                                android:textColor="@color/register_second_step_checkbox_text" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/register_second_step_show_table_row_separation"
                        android:background="#00000000">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:id="@+id/register_second_step_show_location_public_button">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/register_second_step_checkbox_img_size"
                                android:id="@+id/register_second_step_show_location_public_checkbox_image"
                                android:src="@drawable/registro_white_tick_deactivated_grey"
                                android:scaleType="centerInside"
                                android:adjustViewBounds="true"
                                android:background="#00000000"
                                android:layout_marginRight="@dimen/register_second_step_checkbox_img_separation" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register_second_step_show_location"
                                android:id="@+id/textView9"
                                android:textSize="@dimen/register_second_step_checkbox_text"
                                android:layout_gravity="center_vertical"
                                android:background="#00000000"
                                android:textColor="@color/register_second_step_checkbox_text" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"></FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/register_second_step_public_note_margin_bottom"
                    android:background="#00000000"
                    android:layout_marginTop="@dimen/register_second_step_public_note_margin_top">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/register_second_step_public_note_img_size"
                        android:id="@+id/imageView9"
                        android:layout_marginRight="@dimen/register_second_step_public_note_img_separation"
                        android:adjustViewBounds="true"
                        android:src="@drawable/registro_public"
                        android:background="#00000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_second_step_public_note"
                        android:id="@+id/textView6"
                        android:gravity="bottom"
                        android:textSize="@dimen/register_second_step_public_note_text"
                        android:background="#00000000"
                        android:textColor="@color/register_first_step_public_note_text" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_general_buttons_margin_top"
                android:background="#00000000">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_second_step_buttons_back"
                    android:id="@+id/register_second_step_back_button"
                    android:background="@drawable/register_buttons_back_background"
                    android:maxWidth="@dimen/register_general_buttons_max_with"
                    android:layout_gravity="left"
                    android:width="@dimen/register_general_buttons_max_with"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/register_general_buttons_back_text"
                    android:paddingLeft="@dimen/register_general_buttons_padding_left"
                    android:paddingTop="@dimen/register_general_buttons_padding_top"
                    android:paddingRight="@dimen/register_general_buttons_padding_right"
                    android:paddingBottom="@dimen/register_general_buttons_padding_bottom"
                    android:textSize="@dimen/register_general_buttons_text_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_second_step_buttons_next"
                    android:id="@+id/register_second_step_next_button"
                    android:background="@drawable/register_buttons_next_background"
                    android:maxWidth="@dimen/register_general_buttons_max_with"
                    android:width="@dimen/register_general_buttons_max_with"
                    android:layout_gravity="right"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/register_general_buttons_next_text"
                    android:paddingLeft="@dimen/register_general_buttons_padding_left"
                    android:paddingTop="@dimen/register_general_buttons_padding_top"
                    android:paddingRight="@dimen/register_general_buttons_padding_right"
                    android:paddingBottom="@dimen/register_general_buttons_padding_bottom"
                    android:textSize="@dimen/register_general_buttons_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>