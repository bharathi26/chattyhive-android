<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/home_card_background"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="8.5dp">

        <ImageView
            android:id="@+id/left_panel_hive_user_list_user_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/menu_users"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/left_panel_hive_user_list_user_public_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@cat_norris"
                android:textColor="@android:color/black"
                android:textSize="17.5dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="2.5dp"/>
            <TextView
                android:id="@+id/left_panel_hive_user_list_user_status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Too much caffeine today!"
                android:textColor="#404040"
                android:textSize="15dp"
                android:paddingTop="2.5dp"
                android:maxLines="1"/>
        </LinearLayout>

</LinearLayout>