<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/context_list_header_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:paddingTop="12dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/home_card_background"
            android:layout_marginLeft="8.5dp"
            android:layout_marginRight="8.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3.5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="2dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/context_list_item_expanded_hive_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#111111"
                    android:textSize="18dp"
                    android:maxLines="2"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14.5dp">
                    <ImageView
                        android:id="@+id/context_list_item_expanded_hive_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="6dp"
                        android:paddingRight="0dp"
                        android:paddingLeft="9.5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5.5dp">
                            <ImageView
                                android:id="@+id/context_list_item_expanded_category_image"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="4dp"/>
                            <TextView
                                android:id="@+id/context_list_item_expanded_category_text"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:textColor="#111111"
                                android:textSize="12dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5.5dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/pestanha_chats_arroba"/>
                            <TextView
                                android:id="@+id/context_list_item_expanded_users_number"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:text="@string/explore_hive_card_expanded_n_mates"
                                android:textColor="#111111"
                                android:textSize="12dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:text="@string/explore_hive_card_expanded_joined_the_hive"
                                android:textColor="#808080"
                                android:textSize="12dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/pestanha_hives_language_opcion3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:text="@string/explore_hive_card_expanded_hive_chat_langs"
                                android:textColor="#808080"
                                android:textSize="12dp"
                                android:layout_gravity="top" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#111111"
                                android:textSize="12dp"
                                android:id="@+id/context_list_item_expanded_hive_chat_languages"
                                android:layout_gravity="top" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/context_list_item_expanded_hive_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.25sp"
                    android:textColor="#111111"
                    android:maxLines="3"
                    android:paddingTop="13dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="0dp"
                    android:lineSpacingExtra="4.25sp"/>

                <LinearLayout
                    android:id="@+id/context_list_item_expanded_tags_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="12dp">
                    <LinearLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/explore_new_hive_tag"
                            android:alpha="0.75"
                            android:layout_gravity="center_vertical|center_horizontal"/>
                    </LinearLayout>
                    <include
                        android:id="@+id/context_wrap_layout_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/explore_tag_list"
                        android:layout_gravity="left|top" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="stats"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#c0c0c0"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Creado el "
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22/07/2013"
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" - Última actividad: "
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hoy "
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22:04"
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="444K "
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mensajes en el hive chat"
                                    android:textColor="#333"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2222 "
                                    android:textColor="#FF8000"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="imágenes compartidas"
                                    android:textColor="#FF8000"
                                    android:textSize="12dp"
                                    android:gravity="center"/>
                            </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/pestanha_hives_share"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="1px"
                            android:layout_height="16.5dp"
                            android:background="#c0c0c0"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/pestanha_hives_report"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/context_chat_button2"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/explore_button_border"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/launcher_launcher_a"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:text="@string/explore_hive_card_expanded_public_chat"
                                    android:textSize="16dp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="7dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/context_joining_frame"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/explore_button_border"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp" >

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@android:drawable/stat_notify_sync"
                                    android:tint="#000000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:textSize="16dp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="7dp"
                                    android:text="@string/explore_hive_card_expanded_joining_hive" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/context_leave_button"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Salir"
                                android:textSize="16dp"
                                android:gravity="center_vertical"
                                android:textColor="@android:color/black"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/contextos_leave_hive_blanco"
                                android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>